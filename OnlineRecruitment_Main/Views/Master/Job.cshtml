@model vrecruit.DataBase.ViewModel.JobViewModel
@{
    ViewBag.Title = "Job";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
    int cmpid = 0;
    if (Session["currentCompanyId"] != null)
    {
        cmpid = Convert.ToInt32(Session["currentCompanyId"]);
    }
    string CurrentRole = string.Empty;
    if (Session["CurrentRole"] != null)
    {
        CurrentRole = Session["CurrentRole"].ToString();
    }
}

<div class="small-header transition animated fadeIn">
    <div class="hpanel">
        <div class="panel-body">
            <div id="hbreadcrumb" class="pull-right">
                <ol class="hbreadcrumb breadcrumb">
                    <li><a href="@Url.Action("Dashboard", "Master")">Dashboard</a></li>
                    <li class="active">
                        <span>Job </span>
                    </li>
                </ol>
            </div>
            <h2 class="font-light m-b-xs">
                Jobs
            </h2>
            <small>Create Job here.</small>
        </div>
    </div>
</div>
@using (Html.BeginForm("", "", FormMethod.Post, new { id = "submitform", role = "form" }))
{
    @Html.HiddenFor(x => x.IsExport)
    @Html.HiddenFor(x => x.IsPrint)
    @Html.HiddenFor(x => x.IsAdd)
    @Html.HiddenFor(x => x.IsEdit)
    @Html.HiddenFor(x => x.IsDelete)
    @Html.HiddenFor(x => x.IsView)
    <div class="content">
        <div class="row" id="detailsdata">
            <div class="col-lg-12">
                <div class="hpanel">
                    <div class="panel-heading">
                        <div class="row" style="padding-top: 14px;">
                            <div class="col-md-7">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control" id="txtSearch" name="txtSearch" autocomplete="off" placeholder="Search Text...!!!" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2" >
                                <div class="form-group">
                                    <select class="js-source-states" style="width: 100%" id="SearchJobStatus" name="SearchJobStatus">
                                        <option value="true" selected>Active</option>
                                        <option value="false">InActive</option>
                                        <option value="">All</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-1">
                                <button class="btn btn-success" type="button" id="btnSearch"><strong>Search</strong></button>
                            </div>
                            <div class="col-md-2">
                                @if (Model.IsAdd == true)
                                {
                                    <button class="btn btn-primary" type="button" id="btnIn"><strong>Add New Job</strong></button>
                                }
                            </div>
                            <div class="panel-tools">
                                
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table id="JobDatatabledetails" class="display table table-bordered" width="100%">
                                <thead>
                                    <tr>
                                        <th>Job Name</th>
                                        <th>Job Count</th>
                                        <th>Company Name</th>
                                        <th>Client Name</th>
                                        <th>Job Id</th>
                                        <th>Job Status</th>
                                        <th>Last Update Date</th>
                                        <th class="col-md-2">Action</th>
                                    </tr>
                                </thead>
                                <tbody id="tblBody"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row hidden" id="creatediv">
            <div class="col-lg-12">




                <div class="hpanel">
                    <div class="panel-heading">
                        <div class="panel-tools">
                          
                        </div>
                        Create Job
                    </div>
                    <div class="panel-body">
                        <form role="form" id="form">
                            <div class="form-group col-lg-4">
                                <label>Client</label>
                                @Html.DropDownListFor(m => m.JM.ClientId, new SelectList(Model.ClientList, "ClientId", "ClientName", Model.ClientList), "Select Client", new { @class = "js-source-states", @style = "width: 100%", required = "required" })
                            </div>
                            <div class="form-group col-lg-4">
                                <label>Job</label>
                                <input id="JobId" type="hidden" name="JobId" value="" required>
                                <input id="LastUpdatedBy" type="hidden" name="LastUpdatedBy" value="@Session["CurrentUserId"]">
                                <input id="CompanyId" type="hidden" name="CompanyId" value="@Session["currentCompanyId"]">
                                @Html.TextBoxFor(x => x.JM.JobName, new { @class = "form-control", @placeholder = "Job Title", required = "required" })
                            </div>
                            <div class="form-group col-lg-4">
                                <label>Job Description</label>
                                @Html.TextAreaFor(x => x.JM.JobDescription, new { @class = "form-control", @placeholder = "Job Description", required = "required" })
                            </div>
                            <div class="form-group col-lg-4">
                                <label>Years of Exp</label>
                                @Html.TextBoxFor(x => x.JM.Years_of_Exp, new { @id = "Years_of_Exp", @class = "form-control", @placeholder = "Years of Exp", required = "required" })
                            </div>
                            <div class="form-group col-lg-4">
                                <label>Job Count</label>
                                <input id="JobCount" type="text" name="JobCount" value="1" required>
                            </div>
                            <div class="form-group col-lg-4">
                                <label>Location</label>
                                @Html.TextBoxFor(x => x.JM.Location, new { @id = "Location", @class = "form-control", @placeholder = "Location", required = "required" })
                            </div>
                            <div class="form-group col-lg-4">
                                <label>Contact Person</label>
                                @Html.TextBoxFor(x => x.JM.Contact_Person, new { @id = "Contact_Person", @class = "form-control", @placeholder = "Contact Person", required = "required" })
                            </div>
                            <div class="form-group col-lg-4">
                                <label>Job Target Date  </label>
                                <div class="input-group date">
                                    <span class="input-group-addon"><i class="fa fa-calendar" aria-hidden="true"></i></span>
                                    @Html.TextBoxFor(x => x.JM.JobTargetDate, new { @class = "form-control datepicker", @placeholder = "JobTargetDate", required = "required" })
                                </div>
                            </div>
                            <div class="form-group col-lg-4">
                                <label>Job Status</label>
                                <select class="js-source-states" style="width: 100%" id="JobStatus" name="JobStatus">
                                    <option value="">Select Status</option>
                                    <option value="false">In-Active</option>
                                    <option value="true">Active</option>
                                </select>
                            </div>
                            <div class="form-group col-lg-4" style="  float: right; text-align: -webkit-right;">
                                <button class="btn btn-sm btn-primary m-t-n-xs" type="submit" id="btnsubmit"><strong>Submit</strong></button>
                                <button class="btn btn-sm btn-warning m-t-n-xs hidden" type="submit" id="btnUpdate"><strong>Update</strong></button>
                                <button class="btn btn-sm btn-default m-t-n-xs" type="button" id="btncancel"><strong>Cancel</strong></button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div id="detailsdatatbl" class="hidden">
        <div class="row">
            <div class="col-lg-12">
                <div class="hpanel">
                    <div class="panel-heading">
                        @*<div class="panel-tools">
                                <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                                <a class="closebox"><i class="fa fa-times"></i></a>
                            </div>*@
                        <button class="btn btn-primary" type="button" id="btnInjobist"><strong>Job List</strong></button>
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table id="tblDatatable" class="display table table-bordered" width="100%">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Designation</th>
                                        <th>Experience</th>
                                        <th>Education</th>
                                        <th>DOB</th>
                                        <th>Location</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody id="tblBody"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Sidebar Right -->
    <div class="modal fade right" id="sidebar-right" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-md" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Candidate Activity</h4>
                </div>
                <div class="modal-body">
                    <div id="myPartialContainer"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- The Modal -->
    <div class="modal fade" id="JobView">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal body -->
                <div class="modal-body">
                    <div class="container">
                        <div class="clsJob single-item">
                            <div class="" style="width: 44.667%;">
                                <div class="hpanel stats">
                                    <div class="panel-body h-200 list">
                                        <div class="stats-icon pull-right">
                                            <i class="fa fa-address-card fa-3x" aria-hidden="true"></i>
                                        </div>
                                        <div class="m-t-sm clstitle">
                                            <span class="font-bold no-margins font-extra-bold text-success">
                                                Client Name :
                                            </span>
                                            <small>
                                                <label id="lbljobclient"></label>
                                            </small>
                                        </div>
                                        <div class="m-t-sm clstitle">
                                            <span class="font-bold no-margins font-extra-bold text-success">
                                                Job Title :
                                            </span>
                                            <small>
                                                <label id="lbljobtitle"></label>
                                            </small>
                                        </div>
                                        <div class="m-t-sm">
                                            <span class="font-bold no-margins font-extra-bold text-success">
                                                Job Description :
                                            </span>
                                            <br />
                                            <small>
                                                <label id="lbljobdec"></label>
                                            </small>
                                        </div>
                                        <div class="m-t-sm clstitle">
                                            <span class="font-bold no-margins font-extra-bold text-success">
                                                Location :
                                            </span>
                                            <small>
                                                <label id="lbllocation"></label>
                                            </small>
                                        </div>
                                        <div class="m-t-sm">
                                            <span class="font-bold no-margins font-extra-bold text-success">
                                                Job Count :
                                            </span>
                                            <small>
                                                <label id="lbljobcnt"></label>
                                            </small>
                                        </div>
                                        <div class="m-t-sm">
                                            <span class="font-bold no-margins font-extra-bold text-success">
                                                Contact Person :
                                            </span>
                                            <small>
                                                <label id="lblContactPerson"></label>
                                            </small>
                                        </div>
                                        <div class="m-t-sm">
                                            <span class="font-bold no-margins font-extra-bold text-success">
                                                Status :
                                            </span>
                                            <small>
                                                <label id="lbljobstatus"></label>
                                            </small>
                                        </div>
                                        <div class="m-t-sm">
                                            <span class="font-bold no-margins font-extra-bold text-success">
                                                JobTargetDate :
                                            </span>
                                            <small>
                                                <label id="lbljobdate"></label>
                                            </small>

                                        </div>
                                        <div class="m-t-sm">
                                            <span class="font-bold no-margins font-extra-bold text-success">
                                                JobId :
                                            </span>
                                            <small>
                                                <label id="jobuniqid"></label>
                                            </small>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>

            </div>
        </div>
    </div>
}
<script src="~/Scripts/custom/Job.js"></script>

