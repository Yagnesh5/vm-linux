@model vrecruit.DataBase.ViewModel.QuestionAnswerVM
@{
    ViewBag.Title = "Test";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
    var index = 1;
    var CompId = Convert.ToInt32(Session["currentCompanyId"]);
}
<style>
    .btn-success {
        margin-top: 6px;
    }
</style>
<div class="small-header">
    <div class="hpanel">
        <div class="panel-body">
            <div id="hbreadcrumb" class="pull-right">
                <ol class="hbreadcrumb breadcrumb">
                    <li><a href="@Url.Action("Dashboard", "Master")">Dashboard</a></li>
                    <li class="active">
                        <span>Test </span>
                    </li>
                </ol>
            </div>
            <h2 class="font-light m-b-xs">
                Test
            </h2>
            <small>Create Test Here.</small>
        </div>
    </div>
</div>
@using (Html.BeginForm("", "", FormMethod.Post, new { id = "submitform", role = "form" }))
{
    @Html.HiddenFor(x => x.IsEdit)
    @Html.HiddenFor(x => x.IsDelete)
    @Html.HiddenFor(x => x.IsExport)
    @Html.HiddenFor(x => x.IsPrint)
    @Html.HiddenFor(x => x.IsAdd)

    <div class="content">
        <div class="alert alert-info show" id="subTestDiv">
            <strong>Test Map!</strong> <br />
            Please select <span><strong style="color: #c54f3c;">Question group</strong></span> First <i class="fa fa-arrow-right" aria-hidden="true"></i> Give
            <span><strong style="color: #c54f3c;">Test Name</strong></span>  <i class="fa fa-arrow-right" aria-hidden="true"></i>
            <span><strong style="color: #c54f3c;">Enter Time</strong></span>  <i class="fa fa-arrow-right" aria-hidden="true"></i>
            Add <span><strong style="color: #c54f3c;">Question</strong></span>
            from left side arrow to right  <i class="fa fa-arrow-right" aria-hidden="true"></i>
            <span><strong style="color: #c54f3c;">Submit</strong></span>
        </div>
        <div class="row" id="Creatediv">
            <div class="col-lg-12">
                <div class="hpanel">
                    <div class="panel-heading">
                        <div class="panel-tools">
                            
                        </div>
                        Test Form
                    </div>
                    <div class="panel-body">
                        <div class="tab-content">
                            <div id="" class="p-m tab-pane active">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="row">
                                            <div class="col-md-7">
                                                <div class="form-group">
                                                    <label>Search Question</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                                        <input type="text" class="form-control" id="txtSearch" name="txtSearch" autocomplete="off" placeholder="Search Text...!!!" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <label> </label>
                                                @Html.DropDownList("QuestionSkill", Model.QuestionSkillList, "Question Skill", new { @class = "form-control", @placeholder = "Question Skill", required = "required" })
                                            </div>
                                            <div class="col-md-2">
                                                <label> </label>
                                                <button class="btn btn-success" type="button" id="btnSearch"><strong>Search</strong></button>
                                            </div>
                                        </div>
                                        <table id="tblDatatable" class="display table table-bordered tblDatatable">
                                            <thead>
                                                <tr>
                                                    <th>Question</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody id="tblBody" class="connectedSortable"></tbody>
                                        </table>
                                        <div style="text-align:center">
                                            <img src="~/Images/loader.gif" id="loading" />
                                        </div>
                                    </div>


                                    <div class="col-md-6">
                                        <div class="row">
                                            <input type="text" name="CompanyId" id="CompanyId" class="hidden" value="@CompId" />
                                            <div class="form-group col-md-5">
                                                <label>Question Group</label>
                                                @Html.DropDownListFor(m => m.QuestionGroupId, new SelectList(Model.QuegroupList, "ID", "GroupName", Model.QuegroupList), "Select Question Group", new { @class = "js-source-states", @style = "width: 100%", required = "required" })
                                            </div>
                                            <div class="form-group col-md-4">
                                                <label>TestName</label>
                                                <input type="text" name="TestName" id="TestName" class="form-control" />
                                            </div>
                                            <div class="form-group col-md-3">
                                                <label>Enter Time </label>
                                                <div class="row">
                                                    <div class="form-group col-md-6">
                                                        <input type="text" class="form-control" id="txthr" placeholder="hr" onblur="checknum();" maxlength="2" />
                                                    </div>
                                                    <div class="form-group col-md-6">
                                                        <input type="text" class="form-control" id="txtmin" placeholder="min" onblur="checknum();" maxlength="2" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <ul id="sortable1" class="connectedSortable"></ul>
                                    </div>
                                </div>

                                <div class="text-right m-t-xs">
                                    <button class="btn btn-info hidden" type="submit" id="btnUpdate"><strong>Update</strong></button>
                                    <button class="btn btn-success" type="button" id="btnsubmit"><strong>Submit</strong></button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>


}

<link href="~/Content/CustomCss/Test.css" rel="stylesheet" />
<script src="~/Scripts/custom/Test.js"></script>

