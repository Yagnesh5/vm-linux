@model OnlineRecruitment_Main.CustomModels.CompaniesVM
@{
    ViewBag.Title = "Companies";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}
<div class="small-header">
    <div class="hpanel">
        <div class="panel-body">
            <div id="hbreadcrumb" class="pull-right">
                <ol class="hbreadcrumb breadcrumb">
                    <li><a href="@Url.Action("Dashboard", "Master")">Dashboard</a></li>
                    <li class="active">
                        <span>Company </span>
                    </li>
                </ol>
            </div>
            <h2 class="font-light m-b-xs">
                Company
            </h2>
            <small>Here you can create the company.</small>
        </div>
    </div>
</div>
@using (Html.BeginForm("", "", FormMethod.Post, new { id = "submitform", role = "form" }))
{
    @Html.HiddenFor(x => x.IsEdit)
    @Html.HiddenFor(x => x.IsDelete)
    @Html.HiddenFor(x => x.IsExport)
    @Html.HiddenFor(x => x.IsPrint)

    <div class="content">
        <div class="row hidden" id="creatediv">
            <div class="col-lg-12">
                <div class="hpanel">
                    <div class="panel-heading">
                        <div class="panel-tools">
                            <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                            <a class="closebox"><i class="fa fa-times"></i></a>
                        </div>
                        Add Company
                    </div>
                    <div class="panel-body">
                        <div class="tab-content">
                            <div id="step2" class="p-m tab-pane active">

                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="row">
                                            <div class="form-group col-lg-4">
                                                <input type="hidden" name="UserID" id="UserID" />
                                                <label>Company Name</label>
                                                <input type="text" value="" id="CompanyName" class="form-control" name="CompanyName" required>
                                                <input id="Id" name="Id" type="hidden" />
                                            </div>
                                            <div class="form-group col-lg-4">
                                                <label>Email </label>
                                                <input type="text" value="" id="CompanyEmail" class="form-control" name="CompanyEmail" required>
                                            </div>
                                            <div class="form-group col-lg-4">
                                                <label>Phone Number</label>
                                                <input type="text" value="" id="PhoneNumber" class="form-control" name="PhoneNumber" required>
                                            </div>
                                            <div class="form-group col-lg-12">
                                                <div class="row">
                                                    <div class="col-xs-4 form-group">
                                                        <label>Country</label>
                                                        <select class="js-source-states" style="width: 100%" id="Country" name="Country" required>
                                                            <option value="0">Select Country</option>
                                                        </select>
                                                    </div>
                                                    <div class="col-xs-4 form-group">
                                                        <label>State</label>
                                                        <select class="js-source-states" style="width: 100%" id="State" name="State" required>
                                                            <option value="0">Select State</option>
                                                        </select>
                                                    </div>
                                                    <div class="col-xs-4 form-group">
                                                        <label>City</label>
                                                        <select class="js-source-states" style="width: 100%" id="City" name="City" required>
                                                            <option value="0">Select City</option>
                                                        </select>
                                                    </div>
                                                    <div class="col-xs-4 form-group">
                                                        <label>Pincode/Zipcode</label>
                                                        <input class="form-control" placeholder="Pincode" type="text" name="Pincode" id="Pincode" required>
                                                    </div>
                                                    <div class="form-group col-xs-4">
                                                        <label>Status</label>
                                                        <select class="js-source-states" style="width: 100%" id="IsActive" name="IsActive" required>
                                                            <option>Select Status</option>
                                                            <option value="True">Active</option>
                                                            <option value="False">Deactive</option>
                                                        </select>
                                                    </div>
                                                    <div class="form-group col-lg-4">
                                                        <label>Company Address</label>
                                                        <textarea rows="4" cols="50" id="CompanyAddress" class="form-control" name="CompanyAddress" required></textarea>
                                                    </div>
                                                </div>
                                            </div>


                                        </div>
                                    </div>
                                </div>

                                <div class="text-right m-t-xs">
                                    <button class="btn btn-warning hidden" type="submit" id="btnUpdate"><strong>Update</strong></button>
                                    <button class="btn btn-success" type="submit" id="btnsubmit"><strong>Submit</strong></button>
                                    <a class="btn btn-default prev" href="#" id="btncancel">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="detailsdata">
            <div class="row">
                <div class="col-lg-12">
                    <div class="hpanel">
                        <div class="panel-heading">
                            <div class="row" style="padding-top: 14px;">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                            <input type="text" class="form-control" id="txtSearch" name="txtSearch" autocomplete="off" placeholder="Search Text...!!!" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-1">
                                    <button class="btn btn-success" type="button" id="btnSearch"><strong>Search</strong></button>
                                </div>
                                <div class="col-md-2">
                                    @if (Model.IsAdd == true)
                                    {
                                        <button class="btn btn-primary" type="submit" id="btnIn"><strong>Add New Company</strong></button>
                                    }
                                </div>
                                <div class="panel-tools">

                                </div>
                            </div>
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table id="tblDatatable" class="display table table-bordered" width="100%">
                                    <thead>
                                        <tr>
                                            <th>Company Name</th>
                                            <th>Company Admin</th>
                                            <th>Email</th>
                                            <th>Phone</th>
                                            <th>City</th>
                                            <th>Last Update Date</th>
                                            <th>Status</th>
                                            <th class="col-md-2">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="tblBody"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div style="text-align:center">
        <img src="~/Images/loader.gif" id="loading" />
    </div>

}
<script src="~/Scripts/custom/Companies.js"></script>
