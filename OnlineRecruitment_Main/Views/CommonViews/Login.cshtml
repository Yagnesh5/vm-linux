@using OnlineRecruitment_Main.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout_Blank.cshtml";
    ViewBag.Title = "Login";
}
@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "submitform", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("RedirectToAdmin", Url.Action("Index", "Dashboard", new { area = "Admin" }));
    @Html.Hidden("RedirectToSuperAdmin", Url.Action("Index", "Dashboard", new { area = "SuperAdmin" }));
    @Html.Hidden("RedirectToClient", Url.Action("Index", "Dashboard", new { area = "Client" }));
    <div class="login-container">
        <div class="row">
            <div class="col-md-12">
                <div class="text-center m-b-md">
                    <h3>PLEASE LOGIN TO APP</h3>
                    <small>Login</small>
                </div>
                <div class="hpanel">
                    <div class="panel-body">
                        <form action="#" id="loginForm">
                            <div class="form-group">
                                <label class="control-label" for="username">Username</label>
                                <input type="text" placeholder="example@gmail.com" title="Please enter you Email" required="" value="" name="Email" id="Email" class="form-control">
                                <span class="help-block small">Your unique username to app</span>

                            </div>
                            <div class="form-group">
                                <label class="control-label" for="password">Password</label>
                                <input type="password" title="Please enter your password" placeholder="******" required="" value="" name="Password" id="Password" class="form-control">
                                <span class="help-block small">Your strong password</span>

                            </div>
                            <div class="checkbox" style="margin-left: 23px;">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe, new { Style = "padding-left: 0px;" })
                                <p class="help-block small">(if this is a private computer)</p>
                                <p class="pull-right">@Html.ActionLink("ForgotPassword ?", "ForgotPassword", "Account")</p>
                            </div>
                            @*<a class="btn btn-default btn-block" href="#">Register</a>*@
                            <input type="button" id="btnsubmit" value="Log in" class="btn btn-success btn-block" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                @*<strong>HOMER</strong> - AngularJS Responsive WebApp <br /> 2015 Copyright Company Name*@
            </div>
        </div>
    </div>
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>

@Styles.Render("~/bundles/sweetAlert/css")
@Styles.Render("~/bundles/toastr/css")

@Styles.Render("~/bundles/homer/css")

@Scripts.Render("~/bundles/sweetAlert/js")
@Scripts.Render("~/bundles/toastr/js")
<script src="~/Scripts/custom/Login.js"></script>